{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "yklistorny/multi-client",
            "hostname": "client",
            "esential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "yklistorny/multi-server",
            "hostname": "api",
            "esential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "yklistorny/multi-worker",
            "hostname": "worker",
            "esential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "yklistorny/multi-nginx",
            "hostname": "nginx",
            "esential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "conatainerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }

    ]

}